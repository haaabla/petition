<p>Edit Profile</p>

<form id="data" name="data" method="POST">
    <input type="hidden" name="_csrf" value="{{csrfToken}}">
    <input id="firstname"type="text" name="firstname" placeholder="First Name" value="{{info.first_name}}">
    <input id="lastname" type="text" name="lastname" placeholder="Last Name" value="{{info.last_name}}">
    <input id="email" type="email" name="email" placeholder="Email" value="{{info.email}}">
    <input id="password" type="password" name="password" placeholder="Password" value="{{info.password}}">
    <input id="age" type="text" name="age" placeholder="Age" value="{{info.age}}">
    <input id="city" type="text" name="city" placeholder="City" value="{{info.city}}">
    <input id="url" type="text" name="url" placeholder="Website" value="{{info.url}}">
    <br>
    <input id="update" type="submit" value="Update">
</form>
